---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <div class="flex items-center">
        <img
          class="sm:w-[12%] w-1/6 flex-shrink-0 h-auto rounded-full"
          src={`/assets/images/portrait_mode_square.png`}
          alt="Rounded avatar"
        >
        <h1 class="sm:ml-6 ml-8 flex-grow">Hello, I'm Nick Yakovenko! 👋</h1>
      </div>


      <p class="mt-5 mb-2">
        👨‍💻 I am a <strong class="text-accent">Software Engineer</strong> and <strong class="text-accent">Solutions Architect</strong> specializing 
        in <strong class="text-accent">high-load distributed systems</strong> and <strong class="text-accent">infrastructure</strong>.
        <br>
        <br>
        💼 Currently I am living in Zürich and working on real-time fraud detection at <strong class="text-accent"><u><a href="https://www.getfocal.ai/">Mozn</a></u></strong>.
        <br>
        Previously, I worked as Tech Lead at Google (YouTube Site Reliability Infrastructure), Staff SWE at Miro and CloudKitchens, and Software Engineer at Uber.
        <br>
        <br>
        🛠️ My background is primarily back-end focused and infrastructure-heavy, 
        with extensive experience in <strong class="text-accent">Kubernetes</strong>, <strong class="text-accent">Observability</strong>, and <strong class="text-accent">Micro-Services</strong>. 
        <br>
        I primarily use <strong class="text-accent">Go/C++/Kotlin/C#</strong> for back-end development, <strong class="text-accent">Python/Rust</strong> for ML. 
        <br>
        <br>
        💬 Open to discuss <strong class="text-accent">software architecture</strong> and <strong class="text-accent">scalability challenges of your organization</strong>.
        <br>
        <br>
        📝 Happy to help you with your <strong class="text-accent">FAANG interview preparation</strong>.
        <br>
      </p>

      <!-- <p class="mt-2">
        Read the blog posts or check
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://github.com/satnaing/astro-paper#readme"
        >
          README
        </LinkButton> for more info.
      </p> -->
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <!-- <Hr /> -->

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <!-- <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div> -->
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>